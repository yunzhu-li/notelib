<?xml version="1.0" encoding="utf-8"?>
<manifest 
    package="org.fatlyz.notelib"
    android:versionCode="13"
    android:versionName="@string/app_ver"
    android:installLocation="auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <supports-screens android:anyDensity="true" android:smallScreens="true" android:normalScreens="true" android:largeScreens="true" />
    
    <application
        android:icon="@drawable/ic_icon128"
        android:label="@string/app_name" >
        <activity
            android:name=".NLSplashAct"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="NLMainAct"></activity>
        <activity android:name="NLCatalogAct"></activity>
        <activity android:name="NLNoteInfoAct"></activity>
        <activity android:name="NLWelcomeAct"></activity>
        <activity android:name="NLNoteListAct"></activity>
    </application>

</manifest>

